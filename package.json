{
  "name": "zappy",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "cross-env NODE_OPTIONS=--max-old-space-size=384 nest start",
    "start:dev": "cross-env NODE_ENV=development nodemon --watch src --ext ts --exec \"ts-node -r tsconfig-paths/register src/main.ts\"",
    "start:qa": "cross-env NODE_ENV=qa nodemon --watch src --ext ts --exec \"ts-node -r tsconfig-paths/register src/main.ts\"",
    "start:prod": "cross-env NODE_ENV=production node dist/main",
    "start:dev:prod": "cross-env NODE_ENV=development NODE_OPTIONS=--max-old-space-size=1024 node dist/main",
    "start:qa:prod": "cross-env NODE_ENV=qa NODE_OPTIONS=--max-old-space-size=1024 node dist/main",
    "start:debug": "cross-env NODE_ENV=development nodemon --inspect --watch src --ext ts --exec \"ts-node -r tsconfig-paths/register src/main.ts\"",
    "start:worker:prod": "node dist/workers/main.worker.js",
    "start:worker:dev": "cross-env NODE_ENV=development nodemon --watch src --exec \"ts-node -r tsconfig-paths/register src/workers/main.worker.ts\"",
    "copy:email:templates": "cp -r src/modules/email/templates dist/modules/email/templates",
    "build:dev": "cross-env NODE_ENV=development nest build && npm run copy:email:templates",
    "build:qa": "cross-env NODE_ENV=qa nest build && npm run copy:email:templates",
    "build:prod": "cross-env NODE_ENV=production nest build && npm run copy:email:templates",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "db:check": "node scripts/check-database.js",
    "db:check:dev": "cross-env CHECK_ENV=development node scripts/check-database.js",
    "db:check:prod": "cross-env CHECK_ENV=production node scripts/check-database.js",
    "db:check:qa": "cross-env CHECK_ENV=qa node scripts/check-database.js",
    "env:setup": "node scripts/setup-environments.js"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.864.0",
    "@nestjs/axios": "^4.0.1",
    "@nestjs/bull": "^11.0.4",
    "@nestjs/bullmq": "^11.0.4",
    "@nestjs/cli": "^11.0.10",
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
