    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/throttler": "^6.4.0",
    "@sentry/node": "^10.3.0",
    "@sentry/tracing": "^7.120.4",
    "@types/express": "^5.0.3",
    "@types/express-rate-limit": "^6.0.2",
    "@types/joi": "^17.2.3",
    "@types/multer": "^2.0.0",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.66.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cross-env": "^10.0.0",
    "csurf": "^1.11.0",
    "dotenv": "^17.2.1",
    "express-rate-limit": "^8.0.1",
    "firebase-admin": "^13.6.0",
    "handlebars": "^4.7.8",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.2",
    "joi": "^18.0.0",
    "lodash": "^4.17.21",
    "mongoose": "^8.17.1",
    "mongoose-autopopulate": "^1.1.0",
    "nodemailer": "^7.0.11",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg-sdk-node": "https://phonepe.mycloudrepo.io/public/repositories/phonepe-pg-sdk-node/releases/v2/phonepe-pg-sdk-node-2.0.3.tgz",
    "rate-limiter-flexible": "^7.2.0",
